<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Está em um posto de combustível e não sabe o que abastecer? Nós podemos ajudar! "
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextEtanol"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:hint="Preço do etanol" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextGasolina"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="Preço da gasolina" />

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Qual é vantagem?"
        android:id="@+id/button"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="..."
        android:id="@+id/textViewResultado"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#4ec843"
        android:textStyle="bold"
        android:textSize="50dp" />
</LinearLayout>
